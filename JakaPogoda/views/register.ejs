<!doctype html>
<html lang="en">

<head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Rejestracja</title>
    <style>
        .form-div {
            width: 50%;
            margin: auto;
            box-sizing: border-box;
            padding: 10px;
        }
    </style>
</head>

<body class="container mt-5 text-center ">
<h1 class="text-center text-dark">
    Zarejestruj się!
</h1>
<div class="container mt-5 text-center">

    <% if(typeof err !='undefined' ){ %>
        <% if(err.length> 0 ){ %>
            <div class="alert alert-danger" role="alert">
                <h6>
                    <%= err %>
                </h6>
            </div>
        <% } %>
    <% } %>

    <div class="form-div card">
        <div class="card-body">
            <form action="/register" method="POST">
                <div class='row justify-content-between m-1'>
                    <label for="username">Nazwa</label>
                    <input type="text" id="username" name="username" required value="<% if(typeof username !='undefined' ){ %>
                                    <%= username %>
                                <% } %>">
                </div>
                <div class='row justify-content-between m-1'>
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required value="<% if(typeof email !='undefined' ){ %>
                                <%= email %>
                            <% } %>">
                </div>
                <div class='row justify-content-between m-1'>
                    <label for="password1">Hasło</label>
                    <input type="password" id="password1" name="password1" required>
                </div>
                <div class='row justify-content-between m-1'>
                    <label for="password2">Potwierdź Hasło</label>
                    <input type="password" id="password2" name="password2" required>
                </div>

                <button type="submit" class="btn btn-success mt-5">Zarejestruj się!</button>

            </form>

            <p class="mt-2">Już masz konto? <a href="/login">Zaloguj się!</a> </p>
        </div>
    </div>

    
    <!-- jQuery pierw, potem Popper.js, na końcu Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</div>

<!-- Display error message -->
<% if (error && error.length > 0) { %>
    <div class="error-message">
        <%= error %>
    </div>
<% } %>

<!-- Display success message -->
<% if (success && success.length > 0) { %>
    <div class="success-message">
        <%= success %>
    </div>
<% } %>
</body>

</html>